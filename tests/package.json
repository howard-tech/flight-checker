{
  "name": "flight-checker-tests",
  "version": "1.0.0",
  "description": "Test Automation for Flight Checker AI Project",
  "author": "Emesoft",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:api": "jest api/ --verbose",
    "test:integration": "jest integration/ --verbose",
    "test:unit": "jest unit/ --verbose",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage && playwright test",
    "report": "playwright show-report",
    "lint": "eslint . --ext .js,.ts",
    "prepare": "npx playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pg": "^8.11.3",
    "supertest": "^6.3.3",
    "typescript": "^5.3.2"
  }
}
